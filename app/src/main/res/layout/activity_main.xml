<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EtFirstArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginStart="30dp" />

    <EditText
        android:id="@+id/EtSecondArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/EtFirstArray"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/EtThirdArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintStart_toEndOf="@id/EtSecondArray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/EtFourthArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintStart_toEndOf="@id/EtThirdArray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/EtFifthArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintStart_toEndOf="@id/EtFourthArray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/TvFirstArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EtFirstArray"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/TvSecondArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintLeft_toRightOf="@id/TvFirstArray"
        app:layout_constraintTop_toBottomOf="@+id/EtFirstArray"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/TvThirdArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintLeft_toRightOf="@id/TvSecondArray"
        app:layout_constraintTop_toBottomOf="@+id/EtThirdArray"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/TvFourthArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintLeft_toRightOf="@id/TvThirdArray"
        app:layout_constraintTop_toBottomOf="@+id/EtFourthArray"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/TvFifthArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        app:layout_constraintLeft_toRightOf="@id/TvFourthArray"
        app:layout_constraintTop_toBottomOf="@+id/EtFifthArray"
        android:layout_marginStart="30dp"/>

    <Button
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_name"
        app:layout_constraintTop_toBottomOf="@id/TvFirstArray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>